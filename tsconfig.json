{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": ["ESNext", "ES6"],
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests", "**/*.test.ts"]
}
